{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": false,             // <-- turns off all strict checks
    "noImplicitAny": false,
    "strictNullChecks": false,   // <-- allows rowCount or objects to be possibly null/undefined
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "express", "multer"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
